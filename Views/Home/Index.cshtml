<script>
    const greetings = ["Ayubowan!", "Hello!"];
    let currentGreeting = 0;
    const greetingElement = document.getElementById('greeting');

    function updateGreeting() {
        greetingElement.textContent = greetings[currentGreeting];
        currentGreeting = (currentGreeting + 1) % greetings.length;
    }

    updateGreeting(); // Initial call to display the first greeting
    setInterval(updateGreeting, 2000); // Change greeting every 2 seconds
</script>